{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "composite": true,
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      /** Add all packages to the paths */
      "@raven/utils/*": [
        "../../packages/utils/*"
      ],
      "@raven/types/*": [
        "../../packages/types/*"
      ],
      "@assets/*": [
        "./assets/*"
      ],
      "@components/*": [
        "./components/*"
      ],
      "@hooks/*": [
        "./hooks/*"
      ],
      "@lib/*": [
        "./lib/*"
      ],
      "@theme/*": [
        "./theme/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    /** Use all files in the packages folder */
    "../../packages/**/*.ts",
    "../../packages/**/*.tsx",
    "nativewind-env.d.ts"
  ]
}